<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.harunice.makeEvent.dao.MemberDao">
	
	<select id="getMemberByLoginId" resultType="Member">
		SELECT * 
		 FROM member
		WHERE loginId = #{loginId}
	</select>
	
	<insert id="join" useGeneratedKeys="true" keyProperty="id" parameterType="map">
		INSERT INTO member (
			regDate, 
			loginId, 
			loginPw,
			usrNm
		) VALUES (
			CURRENT_TIMESTAMP, 
			#{loginId}, 
			#{loginPw},
			#{usrNm}
		)		
	</insert>
	
</mapper>